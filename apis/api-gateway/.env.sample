# Server Configuration
NODE_ENV=development                          # development | production | test
PORT=4000                                     # Port number for the API Gateway

# Downstream Service URLs
IAM_SERVICE_URL=http://localhost:3000          # Identity and Access Management service
TM_SERVICE_URL=http://localhost:3001           # Task Management service

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000                    # Rate limit window in milliseconds (default: 1 minute)
RATE_LIMIT_MAX=200                            # Max requests per window (default: 200)

# Circuit Breaker
CB_FAILURE_THRESHOLD=5                        # Failures before circuit opens (default: 5)
CB_RESET_TIMEOUT_MS=30000                     # Time before half-open retry (default: 30s)
CB_HALF_OPEN_MAX=3                            # Successes in half-open to close (default: 3)

# Proxy
PROXY_TIMEOUT_MS=30000                        # Upstream request timeout in milliseconds (default: 30s)

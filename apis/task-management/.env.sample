# Server Configuration
NODE_ENV=development                          # development | production | test
PORT=3001                                     # Port number for the Task Management service

# Database Connection
DATABASE_URL="mongodb://localhost:27017/task-db?replicaSet=rs0"  # MongoDB connection string

# JWT Verification (tokens issued by IAM)
JWT_ISSUER=g4-iam                             # Must match IAM's JWT_ISSUER
JWT_AUDIENCE=g4-services                      # Must match IAM's JWT_AUDIENCE
IAM_JWKS_URL=http://localhost:3000/.well-known/jwks.json  # IAM JWKS endpoint for public key discovery
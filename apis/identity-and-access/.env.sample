# Server Configuration
NODE_ENV=development                          # development | production | test
PORT=3000                                     # Port number for the IAM service

# Database Connection
DATABASE_URL="mongodb://localhost:27017/iam-db?replicaSet=rs0"  # MongoDB connection string

# JWT Configuration
JWT_ISSUER=g4-iam                             # JWT issuer claim
JWT_AUDIENCE=g4-services                      # JWT audience claim
ACCESS_TOKEN_EXPIRY=15m                       # Access token expiration (e.g. 15m, 1h)
REFRESH_TOKEN_EXPIRY_HOURS=168                # Refresh token expiration in hours (default: 7 days)
JWT_PRIVATE_KEY_PATH=                         # Path to RS256 private key PEM (required in production)
JWT_PUBLIC_KEY_PATH=                          # Path to RS256 public key PEM (required in production)

# Security
HASH_SECRET=CHANGE_ME                         # Secret key for HMAC hashing (required)
# Server Configuration
PORT=3002                                 # Port number for the IAM service

# Database Connections
DATABASE_URL="mongodb://localhost:27017/iam-db?replicaSet=rs0"  # MongoDB connection string
REDIS_URL=redis://localhost:6379               # Redis server URL for caching

# Security and Authentication
SESSION_SECRET=SESSION_SECRET_KEY_CHANGE_ME    # Secret key for session management (change in production)
JWKS_URI=http://localhost:3000/auth/.well-known/jwks.json  # JSON Web Key Set endpoint for JWT validation

# Cookie Settings
COOKIE_ACCESS_EXPIRES_IN=60                    # Access cookie expiration time in minutes
COOKIE_SAME_SITE=lax                           # SameSite cookie attribute (lax, strict, or none)
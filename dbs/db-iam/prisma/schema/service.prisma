model Service {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    name        String  @unique
    description String?
    apiKey      String  @unique
    isActive    Boolean @default(true)

    // Timestamps
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    // Indexes
    @@index([isActive])
    @@index([deletedAt])
    @@map("services")
}
